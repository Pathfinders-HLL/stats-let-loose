# ============================================
# PostgreSQL Configuration credentials for database administration
# ============================================
# REQUED: Credentials for database administration
POSTGRES_USER=postgres
POSTGRES_DB=stats_let_loose
POSTGRES_PORT=5432

# ============================================
# PostgreSQL Database Application Users - these users are automatically created by init-db.sh 
# ============================================
# REQUED: API Ingestion User (has INSERT/UPDATE/DELETE permissions)
POSTGRES_INGESTION_USER=pathfinder_ingestion
POSTGRES_INGESTION_PASSWORD=YOUR_CRUD_PASSWORD_HERE

# REQUED: Discord Bot User (read-only permissions)
POSTGRES_RO_USER=pathfinder_ro
POSTGRES_RO_PASSWORD=YOUR_READ_ONLY_PASSWORD_HERE

# Optional: Batch sizes for database inserts
MATCH_HISTORY_BATCH_SIZE=50
PLAYER_STATS_BATCH_SIZE=50

# ============================================
# API Ingestion Configuration
# ============================================
# REQUIRED: Base server stats URL for the API where stats will be pulled from 
INGESTION_BASSE_URL=http://your-api-server:7010

# ============================================
# Discord Bot Configuration
# ============================================
# REQUIRED: Get this from https://discord.com/developers/applications/
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN

# OPTIONAL: Development guild ID for faster command syncing. If not set, commands will be synced globally (slower but works for all guilds).
DISCORD_DEV_GUILD_ID=1234567890123456789
# OPTIONAL: Comma-separated list of channel IDs where the bot can be used. If not set or empty the bot will work in all channels.
DISCORD_ALLOWED_CHANNEL_IDS=1234567890123456789,9876543210987654321
# Optional: Channel ID where scheduled stats will be posted. If not set, scheduled stats posting will be disabled.
DISCORD_STATS_CHANNEL_ID=9876543210987654321
